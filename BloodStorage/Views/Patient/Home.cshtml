@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>
<div class="container p-3">
    <div class = "row pt-4">
     <div class="col-6"> 
         <h2 class="text-primary">
             Category List
         </h2>
     </div> 
     <div class="col-6">
         <a href="/pagename">text the user will click on</a>
         <a  asp-controller="Patient" asp-action="Create" class="btn btn-primary"> 
            Create New Category
         </a>

     </div>
    </div>   


<table class="table table-bordered table-striped" style= "width:100%">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>

                <td width="50%"> 
                    @obj.Name
                </td>
                <td width="30%"> 
                    @obj.Address
                </td>
            </tr>
        }

    </tbody>
</table>

</div>
